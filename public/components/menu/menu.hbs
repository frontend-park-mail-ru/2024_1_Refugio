<div class="menu">
    <div class="menu__write-letter-button">Написать письмо</div>
    <div id="incoming-folder" class="menu__folder {{#if titleIncoming}} menu__folder_selected {{/if}}">
        <div class="menu__folder__text">Входящие</div>

        <div class="menu__default-folder__counter">
            {{incoming_count}}
        </div>

    </div>
    <div id="sent-folder" class="menu__folder {{#if titleSent}} menu__folder_selected {{/if}}">
        <div class="menu__folder__text">Отправленные</div>
    </div>

    <div class="menu__folder">
        <div class="menu__folder__text">Черновики</div>
        <div class="menu__default-folder__counter">1</div>
    </div>
    <div class="menu__folder">
        <div class="menu__folder__text">Спам</div>
        <div class="menu__default-folder__counter">1</div>
    </div>
    <div class="menu__folder">
        <div class="menu__folder__text">Корзина</div>
        <div class="menu__trash-folder__clear">Очистить</div>
    </div>
    <div class="menu__folder">
        <div class="menu__folder__text">Непрочитанные</div>
        <div class="menu__default-folder__counter">1</div>
    </div>
    <div class="menu__folder">
        <div class="menu__folder__text">С вложениями</div>
        <div class="menu__default-folder__counter">1</div>
    </div>

    {{#if folders}}
    {{#each folders}}
    {{{this}}}
    {{/each}}
    {{/if}}

    <div class="menu__new-folder-button">Новая папка</div>
    <div class="menu__new-folder">
        <div class="menu__custom-folder__dropdown__wrapper" id="new-wrapper">
            <div class="menu__custom-folder__dropdown">
                <input type="text" class="menu__folder__dropdown__input" id="new-folder-input" placeholder="ivanovii@mailhub.su">
                <div class="menu__folder__dropdown__save-button" id="new-folder-save">Сохранить</div>
                <div class="menu__folder__dropdown__cancel-button" id="new-folder-cancel">Отмена</div>
                <div class="menu__custom-folder__dropdown__error" id="new-folder-error">Ошибка</div>

            </div>
        </div>
    </div>
</div>