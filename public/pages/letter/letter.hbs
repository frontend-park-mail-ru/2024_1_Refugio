<div class="letter-root">
    {{{header}}}
    {{{menu}}}
    <div class="letter-content">
        <div class="letter__header">
            <img src="/icons/arrow-previous.svg" alt="" class="letter__header__button letter__header__back-button">
            <div id="delete" class="letter__header__button">Удалить</div>
            <div id="to-folder" class="letter__header__button">В папку</div>
            <div id="to-spam" class="letter__header__button">Спам</div>
            <div id="mark-as-read" class="letter__header__button">Пометить прочитанным</div>
            <div id="mark-as-unread" class="letter__header__button">Помететить непрочитанным</div>
            <div id="reply" class="letter__header__button">Ответить</div>
            <div id="resend" class="letter__header__button">Переслать</div>
        </div>

        <div class="letter__error">Ошибка</div>


        <span class="letter__subject">
            {{subject}}
        </span>
        <div class="letter__info">
            {{#if status}}
            <img class="letter__info__icon" src="/icons/read-on-offer__256.svg" alt="">
            {{else}}
            <img class="letter__info__icon" src="/icons/read-on__256.svg" alt="">
            {{/if}}
            {{#if avatar}}
            <img class="letter__info__avatar" src="{{avatar}}" alt="{{userLetter}}">
            {{else}}
            <div class="letter__info__avatar">{{userLetter}}</div>
            {{/if}}
            <span class="letter__info__from">{{from}}</span>
            <span class="letter__info__date">{{date}}</span>
        </div>
        <div class="letter__attachments">
            <div class="letter__attachments__view-button">
                <span class="letter__attachments__view-button__label">5 файлов</span>
                <span class="letter__attachments__view-button__counter">255 КБ</span>
            </div>
            <div class="letter__attachments__download-all-button">Скачать все</div>
            <div class="letter__attachments__error">Ошибка</div>
        </div>
        <div class="letter__text">{{text}}</div>
    </div>
</div>